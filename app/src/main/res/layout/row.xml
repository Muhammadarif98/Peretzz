<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:contentPaddingBottom="0dp"
    app:cardUseCompatPadding="true"
    android:background="@color/black"
    android:id="@+id/cardView">


    <RelativeLayout
        android:layout_width="393dp"
        android:layout_height="180dp"
        android:background="#181818"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageIv"
            android:layout_width="156dp"
            android:layout_height="144dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-38dp"
            android:src="@mipmap/ic_launcher">

        </androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@id/imageIv"
            android:layout_toRightOf="@id/imageIv"
            android:text="Title"
            android:textColor="#ffff"
            android:textSize="18sp"
            android:textStyle="bold">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/descriptionTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTv"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/imageIv"
            android:layout_toRightOf="@id/imageIv"
            android:text="Description"
            android:textColor="#686868"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/priceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionTv"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/imageIv"
            android:layout_toRightOf="@id/imageIv"
            android:text="345"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/plus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@id/descriptionTv"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="44dp"
            android:layout_toEndOf="@id/colichestvo"
            android:layout_toRightOf="@id/colichestvo"
            android:background="@drawable/roundplus" />

        <Button
            android:id="@+id/minus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@id/descriptionTv"
            android:layout_marginStart="41dp"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="44dp"
            android:layout_toEndOf="@id/priceTv"
            android:layout_toRightOf="@id/priceTv"

            android:background="@drawable/roundminus" />

        <TextView
            android:id="@+id/colichestvo"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionTv"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/minus"
            android:layout_toRightOf="@id/minus"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="20sp"

            tools:text="0" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>